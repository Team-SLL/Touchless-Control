<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/round_left"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line">

                <TextView
                    android:id="@+id/textView_main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/setting_title_margin"
                    android:fontFamily="@font/nexonlv1bold"
                    android:text="메인화면 동작"
                    android:textColor="@color/text1" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/menu_gray">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/setting_item_margin"
                        android:layout_marginBottom="@dimen/setting_item_margin"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/setting_item_padding"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/textView_main_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="이전 동영상"
                            android:textColor="@color/text2"
                            android:fontFamily="@font/nexonlv1regular"/>

                        <Spinner
                            android:id="@+id/spinner_main_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:spinnerMode="dropdown"
                            android:fontFamily="@font/nexonlv1light"
                            android:background="@drawable/spinner_background"
                            android:theme="@style/SpinnerTheme"
                            android:dropDownVerticalOffset="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/setting_item_margin"
                        android:layout_marginBottom="@dimen/setting_item_margin"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/setting_item_padding"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/textView_main_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="다음 동영상"
                            android:textColor="@color/text2"
                            android:fontFamily="@font/nexonlv1regular" />

                        <Spinner
                            android:id="@+id/spinner_main_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:spinnerMode="dropdown"
                            android:fontFamily="@font/nexonlv1light"
                            android:background="@drawable/spinner_background"
                            android:theme="@style/SpinnerTheme"
                            android:dropDownVerticalOffset="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/setting_item_margin"
                        android:layout_marginBottom="@dimen/setting_item_margin"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/setting_item_padding"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/textView_main_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="동영상 재생"
                            android:textColor="@color/text2"
                            android:fontFamily="@font/nexonlv1regular"/>

                        <Spinner
                            android:id="@+id/spinner_main_3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:spinnerMode="dropdown"
                            android:fontFamily="@font/nexonlv1light"
                            android:background="@drawable/spinner_background"
                            android:theme="@style/SpinnerTheme"
                            android:dropDownVerticalOffset="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/setting_item_margin"
                        android:layout_marginBottom="@dimen/setting_item_margin"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/setting_item_padding"
                        android:weightSum="6">

                        <TextView
                            android:id="@+id/textView_main_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="검색창 활성화"
                            android:textColor="@color/text2"
                            android:fontFamily="@font/nexonlv1regular"/>

                        <Spinner
                            android:id="@+id/spinner_main_4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:spinnerMode="dropdown"
                            android:fontFamily="@font/nexonlv1light"
                            android:background="@drawable/spinner_background"
                            android:theme="@style/SpinnerTheme"
                            android:dropDownVerticalOffset="25dp"/>
                    </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line">

                <TextView
                    android:id="@+id/textView_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/nexonlv1bold"
                    android:text="동영상 재생중 화면"
                    android:textColor="@color/text1" />
            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                android:background="@color/menu_gray">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/setting_item_margin"
                        android:layout_marginBottom="@dimen/setting_item_margin"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/setting_item_padding"
                        android:weightSum="@dimen/setting_layout_weight">

                        <TextView
                            android:id="@+id/textView_video_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/setting_text_weight"
                            android:text="동영상 종료"
                            android:textColor="@color/text2"
                            android:fontFamily="@font/nexonlv1regular" />

                        <Spinner
                            android:id="@+id/spinner_video_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/setting_spinner_weight"
                            android:spinnerMode="dropdown"
                            android:fontFamily="@font/nexonlv1light"
                            android:background="@drawable/spinner_background"
                            android:theme="@style/SpinnerTheme"
                            android:dropDownVerticalOffset="25dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/setting_item_margin"
                        android:layout_marginBottom="@dimen/setting_item_margin"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/setting_item_padding"
                        android:weightSum="@dimen/setting_layout_weight">

                        <TextView
                            android:id="@+id/textView_video_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/setting_text_weight"
                            android:text="일시중지 및 재생"
                            android:textColor="@color/text1"
                            android:fontFamily="@font/nexonlv1regular"/>

                        <Spinner
                            android:id="@+id/spinner_video_2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/setting_spinner_weight"
                            android:spinnerMode="dropdown"
                            android:fontFamily="@font/nexonlv1light"
                            android:background="@drawable/spinner_background"
                            android:theme="@style/SpinnerTheme"
                            android:dropDownVerticalOffset="25dp"/>
                    </LinearLayout>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line">

                <TextView
                    android:id="@+id/textView_search"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/nexonlv1bold"
                    android:text="검색중 동작"
                    android:textColor="@color/text1" />

            </LinearLayout>


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                android:background="@color/menu_gray">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/setting_item_margin"
                        android:layout_marginBottom="@dimen/setting_item_margin"
                        android:gravity="right"
                        android:orientation="horizontal"
                        android:paddingRight="@dimen/setting_item_padding"
                        android:weightSum="@dimen/setting_layout_weight">

                        <TextView
                            android:id="@+id/textView_search_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/setting_text_weight"
                            android:text="검색 종료"
                            android:textColor="@color/text2"
                            android:fontFamily="@font/nexonlv1regular" />

                        <Spinner
                            android:id="@+id/spinner_search_1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="@dimen/setting_spinner_weight"
                            android:background="@drawable/spinner_background"
                            android:dropDownVerticalOffset="25dp"
                            android:fontFamily="@font/nexonlv1light"
                            android:spinnerMode="dropdown"
                            android:theme="@style/SpinnerTheme" />
                    </LinearLayout>

                </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/line">

                <TextView
                    android:id="@+id/textView_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/nexonlv1bold"
                    android:textColor="@color/text1"
                    android:text="동작 최소 지속 시간 (ms)" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@color/menu_gray">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/setting_item_margin"
                    android:layout_marginBottom="@dimen/setting_item_margin"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/setting_item_padding"
                    android:weightSum="@dimen/setting_layout_weight">

                    <TextView
                        android:id="@+id/textView_time_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@dimen/setting_text_weight"
                        android:textColor="@color/text2"
                        android:fontFamily="@font/nexonlv1regular"
                        android:text="고개 움직임 시간" />

                    <EditText
                        android:id="@+id/head_rec_ms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@dimen/setting_spinner_weight"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="ms"
                        android:textColor="@color/text2"
                        android:inputType="numberSigned"
                        android:text="300" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/setting_item_margin"
                    android:layout_marginBottom="@dimen/setting_item_margin"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/setting_item_padding"
                    android:weightSum="@dimen/setting_layout_weight">

                    <TextView
                        android:id="@+id/textView_time_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@dimen/setting_text_weight"
                        android:textColor="@color/text2"
                        android:fontFamily="@font/nexonlv1regular"
                        android:text="눈 깜박임 시간" />

                    <EditText
                        android:id="@+id/eye_rec_ms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@dimen/setting_spinner_weight"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="ms"
                        android:textColor="@color/text2"
                        android:inputType="numberSigned"
                        android:text="1000" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/setting_item_margin"
                    android:layout_marginBottom="@dimen/setting_item_margin"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/setting_item_padding"
                    android:weightSum="@dimen/setting_layout_weight">

                    <TextView
                        android:id="@+id/textView_time_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@dimen/setting_text_weight"
                        android:fontFamily="@font/nexonlv1regular"
                        android:textColor="@color/text2"
                        android:text="입 벌림 시간" />

                    <EditText
                        android:id="@+id/mouth_rec_ms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="@dimen/setting_spinner_weight"
                        android:ems="10"
                        android:gravity="center"
                        android:textColor="@color/text2"
                        android:hint="ms"
                        android:inputType="numberSigned"
                        android:text="1000" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/setting_item_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/cancel_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Cancel"
                        android:background="@drawable/round_buttonstrok"
                        android:textColor="@color/text2"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/nexonlv1bold"/>

                    <Button
                        android:id="@+id/reset_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="RESET"
                        android:background="@drawable/round_buttonstrok"
                        android:textColor="@color/text2"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/nexonlv1bold"/>

                    <Button
                        android:id="@+id/save_button"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Save"
                        android:background="@drawable/round_buttonstrok"
                        android:textColor="@color/text2"
                        android:layout_margin="5dp"
                        android:fontFamily="@font/nexonlv1bold"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>